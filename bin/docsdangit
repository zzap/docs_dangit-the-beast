#!/usr/bin/env php
<?php

// set to run indefinitely if needed
set_time_limit(0);

// include the composer autoloader
require_once __DIR__ . '/../vendor/autoload.php';

// import the Symfony Console Application
use Docsdangit\Command\Ingest;
use Docsdangit\Parsers\WP_Docs_Comments;
use Docsdangit\Reader\Local_Json_Reader;
use Symfony\Component\Console\Application;

$app = new Application();
$app->add(new Ingest(
    new Local_Json_Reader(),
    new WP_Docs_Comments()
));

$app->run();
